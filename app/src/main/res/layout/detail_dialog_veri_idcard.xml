<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="9dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:padding="12dp"
                android:text="ตรวจสอบข้อมูล"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button_dialog_veri_idcard_cancel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_cancel" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView_dialog_veri_idcard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/header"
            app:srcCompat="@drawable/ic_launcher_background" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_dialog_veri_idcard"
            android:layout_margin="16dp"
            app:cardCornerRadius="9dp">

            <Button
                android:id="@+id/button_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/select_rec_without_stoke"
                android:text="ยืนยัน"
                android:textColor="@color/colorWhite" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.v7.widget.CardView>