<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:text="Too Bad"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView_star1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_yellow" />

        <ImageView
            android:id="@+id/imageView_star2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/imageView_star3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/imageView_star4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/imageView_star5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_grey" />

    </LinearLayout>


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_accept_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_rec_without_stoke"
        android:text="Accept"
        android:textColor="@color/colorWhite" />

</android.support.v7.widget.CardView>
</LinearLayout>