<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="9dp">

        <ImageView
            android:id="@+id/imgView_griditem"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@color/colorPurple"
            android:scaleType="centerCrop" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="11dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star_yellow" />

                <TextView
                    android:id="@+id/rate_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="2dp"
                    android:text="(" />

                <TextView
                    android:id="@+id/rate_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:textSize="12dp"
                    android:text=")" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="120dp"
        app:cardBackgroundColor="@color/colorRedOp"
        app:cardCornerRadius="11dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_pre_order" />

            <TextView
                android:id="@+id/textView_griditem_pre_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:gravity="center"

                android:text="cost"
                android:textColor="@color/colorWhite" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/shoppingbag_white" />

            <TextView
                android:id="@+id/textView_griditem_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="cost"
                android:textColor="@color/colorWhite" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>